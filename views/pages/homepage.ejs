<section id="form_container">
            <h1>Welcome HOMEPAGE!</h1>
            <h1>All Schedules</h1>

            <table id="table_schedules">
                <thead>
                    <tr>
                        <th class="th-sm" scope="col">Name  </i></th>
                        <th class="th-sm" scope="col">Day  </th>
                        <th class="th-sm" scope="col">Start At  </th>
                        <th class="th-sm" scope="col">End At  </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                    <% for(let i=0; i < result.length; i++) { %>
                        <tr>
                            <td><a href="/individualEmployee/<%=result[i].user_id%>" style="color:black;"><%= result[i].first_name %>  <%= result[i].surname %></a></td>
                            <%switch(result[i].day){
                                case 1:%>
                                    <td>Monday</td>
                                    <%break;
                                case 2: %>
                                    <td>Tuesday</td>
                                    <%break;
                                case 3 :%>
                                    <td>Wednesday</td>
                                    <%break;
                                case 4: %>
                                    <td>Thursday</td>
                                    <%break;
                                case 5: %>
                                    <td>Friday</td>
                                    <%break;
                                case 6: %>
                                    <td>Saturday</td>
                                    <%break
                                case 7: %>
                                    <td>Sunday</td>
                                    <%break;
                                }%>
                            <td><%= result[i].start_at %></td>
                            <td><%= result[i].end_at %></td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </section>
   
        <script>
            $(document).ready(function() {
    	    $("#table_schedules").DataTable();
            });

        </script>